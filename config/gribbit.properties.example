smtp.server=smtp.gmail.com
smtp.port=587
email.address= # email address on SMTP server, e.g. myemailaccount@gmail.com
email.fullname= # email sender name, e.g. Customer Service
email.password= # email account password

oauth.google.client.id= #...
oauth.google.client.secret= #...

loglevel=INFO

